<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/homeitemview"
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/homeitemoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#21a102"
                android:padding="3dp"
                android:text="10% OFF"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/homeitemimg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/img_slider1" />

            <TextView
                android:id="@+id/homeitemdes"
                android:layout_width="140sp"
                android:maxLines="3"
                android:layout_height="50dp"
                android:text="Descrption"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeitemunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size"
                android:textColor="#d1d0d0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/homeitemnewprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="new Price"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/homeitemoldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old price"
                        android:textColor="#d1d0d0" />
                </LinearLayout>

                <Button
                    android:id="@+id/homeitemButton"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:background="@drawable/button_shape_location2"
                    android:layout_margin="2dp"
                    android:text="+ ADD"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>