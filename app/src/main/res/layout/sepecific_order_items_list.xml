<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/cdView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="2dp">


        <LinearLayout
            android:id="@+id/homeitemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/homeitemoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#21a102"
                android:padding="3dp"
                android:text="10% OFF"
                android:textColor="@color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/homeitemimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/img_slider1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeitemdes"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:maxLines="3"
                    android:gravity="center"
                    android:text="Descrption"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/homeitemunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="size"
                    android:textColor="#d1d0d0"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/homeitemnewprice"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="new Price"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="Quantity"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="Total"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="5dp"
                    android:text="Quantity"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/homeitemButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:background="@drawable/button_shape_location2"
            android:text="Delete"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</LinearLayout>